._app-login {
  min-height: 100vh;
  background-color: #F3F8FB;
}
._app-login-header {
  height: 70px;
  background-color: #fff;
}

._app-login-header-container {
  width: 720px;
  height: 100%;
  margin: auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  ._app-login-logo {
    display: block;
    width: 200px;
    height: 50px;
    margin-top: 10px;
    background-position: left;
    background-repeat: no-repeat;
    background-size: 70%;
    background-image: url('/static/images/logo.png');
  }
  a:last-child {
    margin-right: 10px;
    font-size: 18px;
  }
}

._app-login-section {
  overflow: hidden;
}
._app-login-section-container {
  width: 720px;
  min-height: 500px;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 0 9px 0px rgb(225, 232, 236);
  margin: 30px auto 20px;
  position: relative;
}
._app-login-title {
  font-size: 20px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border-bottom: 1px solid #F3F8FB;
}
._app-login-type {
  height: 50px;
  border-bottom: 1px solid #F3F8FB;
  text-align: center;
  h3 {
    height: 50px;
    width: 150px;
    line-height: 50px;
    text-align: center;
    font-size: 18px;
    display: inline-block;
    border-bottom: 2px solid transparent;
    cursor: pointer;
  }
  h3._active, h3:hover {
    color: #6096FC;
    border-color: #6096FC;
  }
}
._app-login-box {
  width: 350px;
  margin: 22px auto;
}
._app-login-link {
  display: flex;
  justify-content: space-between;
  padding: 0 15px;
  margin-bottom: 22px;
  a {
    font-size: 14px;
    color: #98999A;
    &:hover {
      text-decoration: underline;
    }
  }
}
._app-login-btn {
  position: relative;
  button {
    border: none;
    display: block;
    width: 100%;
    padding: 10px 15px;
    font-size: 18px;
    color: #fff;
    font-weight: 500;
    height: 46px;
    text-align: center;
    background-color: #29AAEA;
    border-radius: 4px;
    &:active { opacity: .7; }
  }
  ._app-login-btn-loading {
    position: absolute;
    top: 0; right: 0; bottom: 0; left: 0;
    background: rgba(255, 255, 255, 0.63);
    color: #20A0FF;
    display: flex;
    align-items: center;
    justify-content: center;
  }
}
._app-login-error {
  text-align: center;
  color: #dc3545;
  padding: 20px;
  font-size: 14px;
}


._app-login._admin-login {
  background-color: #4F5E6F;
  ._app-login-title {
    height: 65px;
    line-height: 65px;
    border-bottom: 1px solid #d0d1d2;
  }
  ._app-login-section-container {
    width: 550px;
    min-height: 440px;
    box-shadow: none;
    border-radius: 0;
    margin-top: 160px;
  }
}

._admin-login-logo {
  position: absolute;
  width: 100%;
  height: 80px;
  top: -80px;
  left: 0;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 50%;
  background-image: url('/static/images/logo.png');
}
svg.icon {
    display: inline-block;
    width: 1em;
    height: 1em;
    vertical-align: -.15em;
    fill: currentColor;
    overflow: hidden;
}
